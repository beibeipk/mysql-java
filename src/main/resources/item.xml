<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.thoughtworks.learning.core.ItemsRepository" >

    <resultMap id="ItemMapper" type="Items">
        <id property="barcode" column="barcode" />
        <result property="name" column="name" />
        <result property="unit" column="unit" />
        <result property="price" column="price" />
    </resultMap>

    <resultMap id="PromotionMapper" type="Promotions">
        <id property="type" column="type" />
        <result property="barcode" column="barcode" />
    </resultMap>


    <select id="findItems" resultMap="ItemMapper">
        select * from Allitems;
    </select>

    <select id="findPromotions" resultMap="PromotionMapper">
        select * from Promotions;
    </select>
</mapper>